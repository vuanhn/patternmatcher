import java.awt.image.BufferedImage;
import java.io.File;
import javax.imageio.ImageIO;

public class MainProgram {
	public static void main(String[] args) {
		if (args.length != 4){
			System.exit(0);
		} 
		
		int argOffset = 0;
		String patternFilename;
		String sourceFilename;
		
		while (argOffset < args.length){
			if (args[argOffset] = "-p") {
				patternFilename = args[argOffset + 1];
			} else if (args[argOffset] = "-s") {
				sourceFilename = args[argOffset + 1];
			}
			argOffset++;
		}
		
		BufferedImage patternImage = null;
		patternImage = ImageIO.read(new File(patternFilename));
		
		BufferedImage sourceImage = null;
		sourceImage = ImageIO.read(new File(sourceFilename));
		
		PatternImage pattern = MyImage.Pattern(patternImage);
		SourceImage source = MyImage.Source(sourceImage);
		
		SearchImages newSearch = SearchImages.search(pattern, source);
		
		newSearch.possibleMatch();		
		
	}
}
